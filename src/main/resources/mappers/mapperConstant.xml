<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.wurigo.socialService.dao.ConstantDAO">

	<resultMap type="java.util.HashMap" id="constMap"> 
		<result column="vname" property="cName"/> 
		<result column="value" property="cValue"/> 
	</resultMap>
	
	 

	<select id="getConstantByName" resultType="String">
		SELECT value from woori_constant where vname = #{_cName}  
	</select>
	
	<select id="getConstantByType" resultMap="constMap">
		SELECT vname, value from woori_constant where vType = #{ _vType } 
	</select>
	
	
	
</mapper>